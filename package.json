{
	"name": "irrigacion",
	"version": "0.0.1",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/irrigacion/frontend"
	},
	"workspaces": [
		"apps/*",
		"packages/core",
		"packages/core/*",
		"packages/config",
		"packages/react/*",
		"packages/react-native/*",
		"packages/react",
		"packages/react-native"
	],
	"scripts": {
		"preinstall": "node ./enforce-yarn.js",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint -- --fix",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,html,yml}\"",
		"check-format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,html,yml}\"",
		"docs:typedoc": "typedoc",
		"docs:astro": "yarn workspace @irrigacion/docs dev",
		"clean": "rm -rf node_modules packages/**/dist apps/docs/dist",
		"prepare": "husky",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "yarn build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@chromatic-com/storybook": "4.1.1",
		"@storybook/addon-a11y": "9.1.6",
		"@storybook/addon-docs": "9.1.6",
		"@storybook/addon-vitest": "9.1.6",
		"@storybook/react-vite": "9.1.6",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@types/css-modules": "^1.0.5",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.13",
		"@vitejs/plugin-react": "^5.0.3",
		"@vitest/browser": "3.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"husky": "^9.1.7",
		"jsdom": "^27.0.0",
		"lint-staged": "^16.1.6",
		"playwright": "^1.55.0",
		"prettier": "^3.6.2",
		"storybook": "9.1.6",
		"turbo": "^2.5.6",
		"typedoc": "^0.28.13",
		"typescript": "^5.9.2",
		"vite": "^7.1.6",
		"vite-plugin-css-injected-by-js": "^3.5.2",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^3.2.4"
	},
	"packageManager": "yarn@1.22.22",
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	}
}
