{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
